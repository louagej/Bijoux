<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_unknown_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frg_unkn_account_info"
        android:textSize="@dimen/TextSize20" />

        <Button
            android:id="@+id/btnLoginFromUnknown"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_unknown_account"
            android:text="@string/frg_unkn_account_login"
            android:textSize="@dimen/TextSize20" />

        <Button
            android:id="@+id/btnRegisterFromUnknown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/btnLoginFromUnknown"
            android:text="@string/frg_unkn_account_Register"
            android:textSize="@dimen/TextSize20" />

</RelativeLayout>